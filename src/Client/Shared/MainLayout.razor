@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="IsDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <div style="position:absolute; top:20px; right:20px; display:flex; align-items:center; justify-content:space-between; width:130px">
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" OnClick="() => IsOverlayVisible = true"></MudIconButton>
        <MudSwitch @bind-Checked="IsDarkMode" ></MudSwitch>
    </div>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudOverlay Visible="IsOverlayVisible" DarkBackground="true" AutoClose="true">
    <img src="example-code.png" />
</MudOverlay>

@code{
    bool IsDarkMode = true;
    bool IsOverlayVisible = false;
}
